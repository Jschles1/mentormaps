generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoadmapStatus {
  Pending
  Active
  Completed
}

enum MilestoneStatus {
  Pending
  PendingCompletionReview
  Active
  Rejected
  Completed
}

model Roadmap {
  id                  Int             @id @default(autoincrement())
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  startedAt           DateTime?
  completedAt         DateTime?
  title               String
  goal                String
  status              RoadmapStatus   @default(Pending)
  milestones          Milestone[]
  currentMilestoneId  Int?
  milestonesCompleted Int?            @default(0)
  milestonesTotal     Int?            @default(0)
  mentorId            String?
  menteeId            String?
  RoadmapInvite       RoadmapInvite[]
}

model Milestone {
  id                     Int             @id @default(autoincrement())
  createdAt              DateTime        @default(now())
  updatedAt              DateTime        @updatedAt
  startedAt              DateTime?
  completedAt            DateTime?
  expectedCompletionTime DateTime?
  attempts               Int             @default(0)
  title                  String
  description            String
  subtasks               String[]
  resources              String[]
  status                 MilestoneStatus @default(Pending)
  order                  Int
  Roadmap                Roadmap?        @relation(fields: [roadmapId], references: [id])
  roadmapId              Int?
}

model RoadmapInvite {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  Roadmap    Roadmap? @relation(fields: [roadmapId], references: [id])
  roadmapId  Int?
  menteeName String
  mentorId   String?
  menteeId   String?
}

model Appointment {
  id              Int      @id @default(autoincrement())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  appointmentTime DateTime
  meetingLink     String
  mentorId        String?
  menteeId        String?
}
